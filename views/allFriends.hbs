<main class="container pt-2">
    {{#if friends}}
    <h4>Total {{count}}  friends</h4>
    <hr>
    {{#each friends}}
    <div class="media p-0 ">
        <div class="media">
            <img src="/media/profile-picture/{{this.picture}}/70/70" class=" m-1 mr-3 rounded-circle align-self-start"
                alt="...">
            <div class="media-body d-flex justify-content-between align-items-center">
                <h5 class="mt-3 align-middle">{{this.username}}</h5>
                <p>{{this.status}}</p>
                <a 
                    href="../../messenger/{{this.id}}"
                    class="ml-3 bg-info px-2 py-1 text-light rounded-circle">
                    <i class="far fa-comment-alt"></i>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <h4>No friends yet?</h4>
    <p class="lead">Search them <a href="../../search"></a></p>
    {{/if}}
</main>